<body class="h-screen">
  <%- include('partials/navbar') %>
  <main class="container mx-auto my-12">
    <div class="px-4 overflow-x-auto md:px-2">
      <% if (msg.length) { %>
      <div class="mb-4">
        <div class="shadow-lg alert alert-success">
          <div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="flex-shrink-0 w-6 h-6 stroke-current"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <span><%= msg %> </span>
          </div>
        </div>
      </div>
      <% } %>

      <ul class="h-screen p-2 menu bg-base-200 rounded-box">
        <li class="menu-title">
          <span>Contacts List | <a href="/contacts/new">Add New</a></span>
        </li>
        <% if (locals.contacts.length) { locals.contacts.forEach((contact, i) =>
        { %>
        <li>
          <div
            class="flex justify-between"
            data-aos="fade-up"
            data-aos-delay="<%= i * 50 %>"
          >
            <a href="/contact/<%= contact.name %>" class="w-full">
              <div class="flex items-center gap-4">
                <div class="avatar online placeholder">
                  <div
                    class="w-16 rounded-full bg-neutral-focus text-neutral-content"
                  >
                    <span class="text-xl">KD</span>
                  </div>
                </div>
                <div>
                  <h4 class="text-xl"><%= contact.name %></h4>
                  <small><%= contact.nohp %> </small>
                </div>
              </div>
            </a>
            <div>
              <div class="dropdown dropdown-end dropdown-hover">
                <label tabindex="0" class="m-1 btn-ghost btn btn-circle">
                  <svg
                    class="w-6 h-6"
                    data-darkreader-inline-stroke=""
                    fill="none"
                    stroke="currentColor"
                    style="--darkreader-inline-stroke: currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 6h16M4 12h16M4 18h16"
                    ></path>
                  </svg>
                </label>
                <ul
                  tabindex="0"
                  class="p-2 shadow dropdown-content menu bg-base-100 rounded-box w-52"
                >
                  <li>
                    <form
                      action="/contacts?_method=DELETE"
                      method="POST"
                      class="inline-flex"
                    >
                      <input
                        type="hidden"
                        name="name"
                        value="<%= contact.name %>"
                      />
                      <button type="submit">
                        <svg
                          class="w-6 h-6"
                          data-darkreader-inline-stroke=""
                          fill="none"
                          stroke="currentColor"
                          style="--darkreader-inline-stroke: currentColor"
                          viewBox="0 0 24 24"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                          ></path>
                        </svg>
                        Delete
                      </button>
                    </form>
                  </li>
                  <li>
                    <a href="/contact/<%= contact.name %>/edit">
                      <svg
                        class="w-6 h-6"
                        data-darkreader-inline-stroke=""
                        fill="none"
                        stroke="currentColor"
                        style="--darkreader-inline-stroke: currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                        ></path>
                      </svg>
                      Edit
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </li>
        <% })} %>
      </ul>
    </div>
  </main>
  <script defer>
    AOS.init();
  </script>
</body>
